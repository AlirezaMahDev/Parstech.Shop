@page "{Status}"
@model Shop.Web.Pages.Checkout.PaymentModel
@{
   
    ViewData["Title"] = "بازگشت از پرداخت";
}
<main id="content" role="main">


    <div class="container">
        <div class="row">
            <partial name="Site/_PanelSideBar" />
            <div class="col-lg-9 order-lg-1">
                <div class="pb-7 mb-7">
                    <!-- Title -->
                    <div class="panel panel-warning box shadow border">
                        <div class="panel-heading">
                            <div class="panel-title">
                                <h6 class="title">

                                    بازگشت از پرداخت
                                    <i class="  fas fa-bag-shopping Yellow "></i>
                                </h6>
                            </div><!-- /.panel-title -->
                            <div class="buttons-box toggle">
                            </div><!-- /.buttons-box -->
                        </div><!-- /.panel-heading -->
                        <div class="panel-body text-center">
                            @if (Model.Result.IsSuccessed)
                            {
                                <i class="  fas fa-circle-check Green fa-big"></i>
                                <h3>پرداخت موفق</h3>
                                <h5>@Model.Result.Message</h5>
                                <h6>@Model.Result.Object</h6>
                                <h6>توضیحات</h6>
                                <small>@Model.Result.Object2</small>
                            }
                            else
                            {
                                <i class="  fas fa-circle-xmark Red fa-big"></i>
                                <h3>پرداخت ناموفق</h3>
                                <h5>@Model.Result.Message</h5>
                            }
                           
                        </div><!-- /.panel-body -->
                    </div>
                    <!-- End Title -->




                </div>
            </div>
        </div>

    </div>
</main>