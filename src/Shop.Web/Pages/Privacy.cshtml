@page
@model PrivacyModel
@{
    Layout = "Shared/SiteAuth_Layout";
    ViewData["Title"] = "Privacy Policy";
}

<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">
        <div class="row rtl">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="logo-area text-center mb-3 ">

                    <a href="/"><img src="/Shared/Images/MeliLogo.png" class="img-fluid" style="width: 70px;" alt="logo"></a>

                </div>
               
                <div class="auth-wrapper form-ui border pt-4 shadow-1200">
                   @*  <div class="section-title title-wide mb-1 no-after-title-wide">
                        <h2 class="font-weight-bold">ورود</h2>
                    </div> *@
                    <div class="logo-area text-center mb-3 ">
                        <a href="/"><img src="/Shared/Images/logo.png" class="img-fluid w-50" alt="logo"></a>
                    </div>
                    <form action="#">
                        <div class="form-row-title">
                            <h3>شماره موبایل</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input type="text" class="input-ui pr-2" placeholder="شماره موبایل خود را وارد نمایید">
                            <i class="mdi mdi-account-circle-outline"></i>
                        </div>

                        <div class="form-row mt-3">
                            <button class="btn-primary-cm btn BgOrange btn-with-icon mx-auto w-100">
                                <i class="mdi mdi-login-variant"></i>
                                ورود با کد یکبار مصرف 
                            </button>
                        </div>

                        <div class="form-row-title">
                            <h3>رمز عبور</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input type="password" class="input-ui pr-2" placeholder="رمز عبور خود را وارد نمایید">
                            <i class="mdi mdi-lock-open-variant-outline"></i>
                        </div>
                        <div class="form-row mt-2">
                            <div class="custom-control custom-checkbox float-right mt-2">
                                <input type="checkbox" class="custom-control-input" id="customCheck3">
                                <label class="custom-control-label" for="customCheck3">
                                    مرا به خاطر بسپار
                                </label>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <button class="btn-primary-cm btn BgSormei btn-with-icon mx-auto w-100">
                                <i class="mdi mdi-login-variant"></i>
                                ورود با کلمه عبور
                            </button>
                        </div>
                    </form>
                    <div class="form-footer mt-3">
                        <div>
                            <span class="font-weight-bold">میخواهید ثبت نام کنید؟</span>
                            <a href="#" class="mr-3 mt-2 Orange">ثبت نام در پارس تک</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Styles {
    <link href="~/Shared/Lib/Shared/Toast/Toast.css" rel="stylesheet" />
    <link href="~/Admin/plugins/data-table/DataTables-1.10.16/css/jquery.dataTables.css" rel="stylesheet">
    <link href="~/Admin/plugins/select2/dist/css/select2.min.css" rel="stylesheet">

    <link href="~/Site/ProductDetail/materialdesignicons.min.css" rel="stylesheet" />
    <link href="~/Site/ProductDetail/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Site/ProductDetail/main.css" rel="stylesheet" />
}
@section Scripts {
    <script src="~/Shared/Lib/Shared/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Shared/Lib/Dhared/Toast/Toast.js"></script>
    <script src="~/Shared/Lib/Shared/Toast/MyToast.js"></script>


    <script src="~/Shared/Lib/Shared/jquery-ajax-unobtrusive/3.2.6/Separate.js"></script>

    <script src="~/Shared/Lib/Site/Products/Detail/Base.js"></script>

    <script src="~/Site/ProductDetail/owl.carousel.min.js"></script>
    <script src="~/Site/ProductDetail/owl.carousel2.thumbs.min.js"></script>
    <script src="~/Site/ProductDetail/main.js"></script>
}


