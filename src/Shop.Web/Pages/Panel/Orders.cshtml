@page
@model Shop.Web.Pages.Panel.OrdersModel
@{
}
<main id="content" role="main">


    <div class="container">


       
            <div class="row">
                <partial name="Site/_PanelSideBar" />

                <div class="col-lg-9 order-lg-1">
                    <div class="pb-7 mb-7">
                        <!-- Title -->
                        <div class="panel panel-warning box shadow border">
                            <div class="panel-heading">
                                <div class="panel-title">
                                    <h6 class="title">

                                        سفارشات من
                                        <i class=" fas fa-basket-shopping Red"></i>
                                    </h6>
                                </div><!-- /.panel-title -->
                                <div class="buttons-box toggle">
                                </div><!-- /.buttons-box -->
                            </div><!-- /.panel-heading -->
                            <div class="panel-body rtl">
                                <div class="d-flex mb-2" id="pagingHeader">
                                </div>
                                <div class="table-responsive">
                                    <table class="table" id="table">
                                        <thead>
                                            <tr>
                                                
                                                <th>شناسه سفارش</th>
                                                <th>وضعیت</th>
                                                <th>مشتری</th>
                                                <th>مبلغ نهایی</th>
                                                <th>عملیات</th>
                                            </tr>
                                        </thead>
                                        <tbody id="OrdersSection">

                                           
                                        </tbody>
                                    </table>
                                </div>
                                <div class="d-flex mb-2" id="paging">
                                </div>
                            </div><!-- /.panel-body -->
                        </div>
                        <!-- End Title -->




                    </div>
                </div>
            </div>
       
    </div>
</main>



@*Modal*@
<!--Start Show Order Detail -->
<div id="ShowOrderDetailModal" class="modal fade" role="dialog" tabindex="-1">
	<div class="modal-dialog modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close " data-bs-dismiss="modal">&times;</button>
				<h6 class="modal-title"><i class=" fas fa-file-circle-check Orange m-1"></i> <b>اطلاعات سفارش</b></h6><br />
				<div class="pt-2">


					<div class="form-group" id="OrderHeader">
					</div>

				</div>
			</div>
			<div class="modal-body">
				<div class="row">




					<div class="col-6">


						<h6 class="title"><i class=" far fa-address-card Orange m-1"></i> <b>اطلاعات مشتری</b> </h6>
						<div class="form-group" id="UserInfo">
						</div>


					</div>
					<div class="col-6">

						
							<h6 class="title"><i class=" fas fa-location-dot Orange m-1"></i> <b>مشخصات محل سکونت</b> </h6>

						
						<div class="form-group" id="OrderShipping">
						</div>


					</div>
					<div class="col-12">
						<hr />
						<h6 class="title"><i class=" fas fa-cart-shopping Orange m-1"></i> <b>اقلام</b></h6>
						<table class="table ">
							<thead class="bordered-darkorange">
								<tr>
									<th>
										ردیف
									</th>
									<th>
										نام قلم
									</th>
									<th>
										تعداد
									</th>
									<th>
										مبلغ
									</th>
									<th>
										جمع
									</th>
									<th>
										مالیات
									</th>
									<th>
										تخفیف
									</th>
									<th>
										جمع کل
									</th>

								</tr>
							</thead>
							<tbody id="Products">
							</tbody>
						</table>


					</div>
				</div><!-- /col-lg-12 -->
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-danger btn-round" data-bs-dismiss="modal">بازگشت</button>
			</div>

		</div>
	</div>
</div>
<!--End Show Order Detail -->
@*End Modal*@

<!--FORMS-->
<form method="post" id="GetDataForm" asp-page-handler="Data"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-begin="OnLoading"
      data-ajax-complete="OnComplete"
      data-ajax-failure="OnError">
    <input type="hidden" asp-for="Parameter.CurrentPage" id="Parameter_CurrentPage" />
</form>
<form method="post" id="GetOrderForm" asp-page-handler="ShowOrderDetail"
      data-ajax="true"
      data-ajax-method="POST"
      data-ajax-begin="OnLoadingGetItem"
      data-ajax-complete="OnCompleteGetItem"
      data-ajax-failure="OnErrorGetItem">
    <input type="hidden" asp-for="OrderId" class="OrderId" />
</form>
<!--End FORMS-->
