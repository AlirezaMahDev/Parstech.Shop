                                                                    }
                                                                }
                                                                else
                                                                {
                                                                    <ins class="font-size-15 font-weight-bold text-decoration-none d-flex">به اتمام رسیده </ins>
                                                                }


                                                            </div>
                                                            <div class="d-none d-xl-block prodcut-add-cart">
                                                                <a href="/Products/Detail/@item.ShortLink/@item.ProductStockPriceId" class="btn-add-cart btn-primary transition-3d-hover"><i class="ec ec-add-to-cart"></i></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="product-item__footer">
                                                        <div class="border-top pt-2 flex-center-between flex-wrap">
                                                            <a onclick="AddToCompare(@item.Id)" class="text-gray-6 font-size-13"><i class="ec ec-compare mr-1 font-size-15"></i> مقایسه</a>
                                                            <a onclick="AddToFavorite(@item.Id)" class="text-gray-6 font-size-13"><i class="ec ec-favorites mr-1 font-size-15"></i> علاقه مندم</a>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>


                                }

                            </div>
                        </div>

                    </div>
                </div>
            }

        </div>


        <!-- End Tab Content -->
    </div>
    <!-- End Nav Pills -->
</div>

