    <div class="col-4">
        <button type="button" id="toggleSidebar">باز/بسته کردن</button>
        <div class="Mysidebar">
            
            <div class="sidebarContent">
                <button type="button" id="toggleSidebar">باز/بسته کردن</button>
                <a>اهههههههههههههههههههههههههههههههههههههههههههههههههههههههه</a>
            </div>
        </div>
    </div>
</div>

<style>
    /* استایل‌های سایدبار */
    .Mysidebar {
        position: fixed;
        top: 0;
        right: -300px; /* این عدد می‌تواند اندازه‌ی سایدبار باشد */
        width: 300px; /* عرض سایدبار */
        height: 100%;
        background-color: #f2f2f2;
        transition: right 0.3s ease; /* انیمیشن باز و بسته شدن */
        z-index: 999; /* تا از بقیه المان‌ها روی صفحه بالاتر باشد */
    }

    .sidebarContent {
        padding: 20px;
    }

    /* استایل دکمه باز/بسته کردن */
    #toggleSidebar {
        position: absolute;
        top: 10px;
        right: -40px;
        background-color: #333;
        color: #fff;
        border: none;
        padding: 5px 10px;
        cursor: pointer;
    }

</style>
<script>
    document.getElementById('toggleSidebar').addEventListener('click', function () {
        var sidebar = document.querySelector('.Mysidebar');
        if (sidebar.style.right === '-300px') {
            sidebar.style.right = '0';
        } else {
            sidebar.style.right = '-300px';
        }
    });

</script>
