@using Parstech.Shop.Context.Application.DTOs.User
@{
    var Param = new UserNameDto();
    if (User.Identity.IsAuthenticated)
    {
        Param.userName = User.Identity.Name;
    }
    else
    {
        Param.userName = null;
    }

    Param.Position = "SitePanel";
}
@await Component.InvokeAsync("UserName",Param)  