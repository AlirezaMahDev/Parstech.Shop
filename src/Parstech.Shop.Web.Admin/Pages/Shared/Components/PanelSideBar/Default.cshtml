                    </div>
                </div>
                <!-- End Card -->
            </div>
            <div id="shopCartAccordion2" class="accordion rounded mb-2">
                <!-- Card -->
                <div class="card border-0">
                    <div id="shopCartHeadingTwo" class="alert  mb-0" role="alert">
                        <h6 class="title text-right font-weight-bold p-1">امتیاز شما<i class=" fas fa-coins Pink m-1"></i></h6>


                        <a href="#" class="alert-link collapsed small" data-toggle="collapse" data-target="#shopCartTwo2" aria-expanded="false" aria-controls="shopCartTwo2"> <i class=" fas fa-arrow-left"></i>مشاهده موجودی</a>
                    </div>
                    <div id="shopCartTwo2" class="border border-top-0 collapse rtl" aria-labelledby="shopCartHeadingTwo" data-parent="#shopCartAccordion2" style="">
