                    </div>
                </div>
                <!-- End Card -->
            </div>
            <div id="shopCartAccordion3" class="accordion rounded mb-2">
                <!-- Card -->
                <div class="card border-0">
                    <div id="shopCartHeadingTwo" class="alert  mb-0" role="alert">
