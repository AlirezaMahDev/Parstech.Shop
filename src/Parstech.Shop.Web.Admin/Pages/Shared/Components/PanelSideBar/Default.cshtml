@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Parstech.Shop.Context.Application.DTOs.Wallet.WalletDto


<div class="pl-lg-3 ">
    <div class="bg-gray-1 rounded-lg">
        <!-- Order Summary -->
        <div class="pl-4 pr-4 pt-4 pb-2  checkout-table">
            <!-- Title -->
            <div class="border-bottom border-color-1 mb-5">
                <h3 class="section-title mb-0 pb-2 font-size-25">پنل کاربری</h3>
            </div>
            <!-- End Title -->

            <partial name="Shared/_UserNamePartialSitePanel" />
            
            <div id="shopCartAccordion1" class="accordion rounded mb-2">
                <!-- Card -->
                <div class="card border-0">
                    <div id="shopCartHeadingTwo" class="alert   mb-0" role="alert">
                        <h6 class="title text-right font-weight-bold p-1">حساب کیف پول<i class=" fas fa-wallet Green  m-1"></i></h6>

                        <a href="#" class="alert-link collapsed small" data-toggle="collapse" data-target="#shopCartTwo" aria-expanded="false" aria-controls="shopCartTwo"> <i class=" fas fa-arrow-left"></i>مشاهده موجودی</a>

                    </div>
                    <div id="shopCartTwo" class="border border-top-0 collapse rtl" aria-labelledby="shopCartHeadingTwo" data-parent="#shopCartAccordion1" style="">
                        <h6 class="title text-center font-weight-bold">@Model.Amount.ToString("#,0") تومان</h6>
                    </div>
                </div>
                <!-- End Card -->
            </div>
            <div id="shopCartAccordion4" class="accordion rounded mb-2">
                <!-- Card -->
                <div class="card border-0">
                    <div id="shopCartHeadingTwo" class="alert  mb-0" role="alert">
