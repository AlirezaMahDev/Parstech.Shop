                                            {
                                                <div class="col-6 col-md-4 col-xl-3 col-wd-2gdot4 product-item">
                                                    <div class="product-item__inner px-xl-2 p-2">

                                                        @if (item.DiscountDate != null)
                                                        {
                                                            <div class="rtl">
                                                                <input type="hidden" id="date-@item.Id"
                                                                       value="@item.DiscountDate"/>
                                                                <input type="hidden" value="@item.Id" class="Discount"/>
                                                                <div id="@item.ProductStockPriceId">
                                                                </div>
                                                            </div>
                                                        }


                                                        <div class="product-item__body pb-xl-2">

                                                            <div class="mb-2"><a
                                                                    href="/Products/Detail/@item.ShortLink/@item.ProductStockPriceId"
                                                                    class="font-size-12 text-gray-5">@item.CateguryName</a>
                                                            </div>
                                                            <div class="mb-2">
                                                                <a href="/Products/Detail/@item.ShortLink/@item.ProductStockPriceId"
                                                                   class="d-block text-center"><img class="img-fluid"
                                                                                                    src="~/Shared/Images/Products/@item.Image"
                                                                                                    alt=""></a>
                                                            </div>
                                                            <h6 class="font-size-12 mb-1 product-item__title"><a
                                                                    href="/Products/Detail/@item.ShortLink/@item.ProductStockPriceId"
                                                                    class=" font-weight-bold">@item.Name</a></h6>

                                                            <div class="flex-center-between mt-4 mb-1">


                                                                <div
                                                                    class="prodcut-price d-flex align-items-center position-relative">
                                                                    @if (item.Quantity > 0)
                                                                    {
                                                                        @if (item.DiscountPrice > 0)
                                                                        {
                                                                            <ins
                                                                                class="font-size-15 font-weight-bold text-red text-decoration-none d-flex">
                                                                                <img
                                                                                    src="~/shared/toman.svg"/> @item.DiscountPrice.ToString("#,0")
                                                                            </ins>

                                                                            <del
                                                                                class="font-size-1 tex-gray-6 position-absolute ">@item.SalePrice.ToString("#,0")</del>
                                                                        }
                                                                        else
