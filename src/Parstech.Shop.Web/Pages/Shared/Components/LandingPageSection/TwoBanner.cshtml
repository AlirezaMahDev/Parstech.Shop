@model Parstech.Shop.Shared.Protos.Section.SectionWithDetailsResponse
<div class="mb-6">
    <div class="row">

        @foreach (var item in Model.SectionDetails)
        {
            // Determine column space from the title or order property
            string colSpace = item.Order > 0 ? item.Order.ToString() : "6";
            string className = $"col-md-{colSpace} col-lg-{colSpace} col-sm-12";
            string bannerClassName = $"banner-{colSpace}";

            <div class="@className mb-2">
                <div class="@bannerClassName " style="background-image: url(/shared/images/@item.BackgroundImage);background-size:cover">
                    <a href="@item.Link" class="w-100 bannerHeight-170 py-3 py-xl-3 py-wd-4 my-2 my-wd-1 d-inline-flex align-items-center text-gray-90">

                        @if (item.Image != null)
                        {
                            <div class="col-2 col-md-2 pr-0 pl-wd-10">
                                <img class="img-fluid" src="~/shared/images/@item.Image" alt="@item.Alt">
                            </div>
                        }
                        @if (item.Caption != null)
                        {
                            <div class="col-10 col-md-10 pr-xl-5 pr-wd-9">
                                <div class="mb-1 font-size-18 font-weight-light text-ls-n1 text-lh-23">
                                    <strong>@item.Caption</strong>

                                </div> <div class="mb-1 font-size-18 font-weight-light text-ls-n1 text-lh-23">
                                    <span>@item.SubCaption</span>
                                </div>

                            </div>
                        }


                    </a>
                </div>
            </div>


        }

    </div>
</div>