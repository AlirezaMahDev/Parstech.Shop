@{
    var Param = new Context.Application.DTOs.User.UserNameDto();
    if (User.Identity.IsAuthenticated)
    {
        Param.userName = User.Identity.Name;
    }
    else
    {
        Param.userName = null;
    }

    Param.Position = "MobileMenu";
}
@await Component.InvokeAsync("UserName",Param)  