@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Parstech.Shop.Web.Pages.Auth.LoginModel

@{
    Layout = "Shared/Auth_Layout";
    ViewData["Title"] = "Log in";
}
<div class="container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="logo-con m-t-10 m-b-10">
                <img src="~/Shared/Images/logo.png" class="dark-logo center-block img-responsive" alt="logo">
                <img src="~/Shared/Images/logoWhite.png" class="light-logo center-block img-responsive" alt="logo">
            </div><!-- /.logo-con -->

            <h2 class="text-center m-b-20">وارد شوید</h2>
            <hr>
            <div id="Error">

            </div>
            <form class="m-t-30 m-b-30" method="post"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-begin="OnLoading"
                  data-ajax-complete="OnComplete"
                  data-ajax-failure="OnError">

                <div class="form-group">
                    <label class="sr-only">نام کاربری</label>
                    <div class="input-group round">
                        <span class="input-group-addon">
                            <i class="icon-user"></i>
                        </span>
                        <input asp-for="Input.UserName" class="form-control ltr text-left">

                    </div><!-- /.input-group -->
                </div><!-- /.form-group -->
                <div class="form-group">
                    <label class="sr-only">کلمه عبور</label>
                    <div class="input-group round">
                        <span class="input-group-addon">
                            <i class="icon-key"></i>
                        </span>
                        <input asp-for="Input.Password" class="form-control ltr text-left" type="password"
                               minlength="5">

                    </div><!-- /.input-group -->
                </div><!-- /.form-group -->
                <p>
                    <button type="submit" class="btn btn-round btn-warning ladda-button btn-block"
                            data-style="slide-up">
                        <i class="icon-login font-lg"></i>
                        ورود
                    </button>

                </p>
            </form>



            @*  <a href="forget.html" class="btn btn-default btn-round btn-block m-b-10">
                <i class="icon-refresh font-lg"></i>
                بازیابی رمز  عبور
            </a>*@

        </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
</div><!-- /.container-fluid -->

@section Styles {
    <link href="~/shared/lib/shared/toast/toast.css" rel="stylesheet"/>
    <link href="~/Admin/plugins/ladda/dist/ladda-themeless.min.css" rel="stylesheet">
}

@section Scripts {
    <script src="~/shared/lib/shared/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/shared/lib/admin/auth/login.js"></script>
    <script src="~/shared/lib/shared/toast/toast.js"></script>
    <script src="~/shared/lib/shared/toast/mytoast.js"></script>

    <!-- BEGIN PAGE JAVASCRIPT -->
    <script src="~/Admin/plugins/ladda/dist/spin.min.js"></script>
    <script src="~/Admin/plugins/ladda/dist/ladda.min.js"></script>
    <script src="~/Admin/js/pages/ladda.js"></script>
}
